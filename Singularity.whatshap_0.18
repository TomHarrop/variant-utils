Bootstrap: docker
From: python:3.7.5-buster

%help
    Container for whatshap 0.18

%labels
    VERSION "whatshap 0.18"

%post
    apt-get update
    apt-get install -y \
        build-essential \
        libcrypto++-dev

    /usr/local/bin/pip3 install whatshap==0.18

%runscript
    exec /usr/local/bin/whatshap "$@"
