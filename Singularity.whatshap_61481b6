    apt-get install -y \
        build-essential \
        libcrypto++-dev

    # /usr/local/bin/pip3 install whatshap==0.19

    /usr/local/bin/pip3 install \
    	git+https://bitbucket.org/whatshap/whatshap.git@61481b6

%runscript
    exec /usr/local/bin/whatshap "$@"
